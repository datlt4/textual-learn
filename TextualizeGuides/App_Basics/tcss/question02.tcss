Screen {
    layout: grid; # Sets the screen layout to a grid structure.
    grid-size: 2; # Creates a 2-column grid layout.
    grid-gutter: 2; # Defines the spacing between grid items (similar to padding or margin)
    padding: 0;   # Adds padding around the content in the screen by 2 units.
}

#question {
    width: 100%;
    height: 100%;
    column-span: 2;
    content-align: center bottom;
    text-style: bold;
}

Button {
    width: 100%;
}
